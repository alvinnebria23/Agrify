<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:padding="5dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_upload_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    android:background="@drawable/button_border_green"
                    android:padding="30dp" />

                <ImageView
                    android:id="@+id/image_1_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/button_border_green" />

                <ImageView
                    android:id="@+id/image_2_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/button_border_green"/>

                <ImageView
                    android:id="@+id/image_3_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/button_border_green" />

                <ImageView
                    android:id="@+id/image_4_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/button_border_green" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="PRODUCT"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/add_product_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_border_green"
            android:textColor="@color/textview_colors"
            android:hint="Enter Product"
            android:padding="10dp"
            android:textSize="12sp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="DESCRIPTION"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/add_description_id"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_border_green"
            android:ems="10"
            android:textColor="@color/Gray"
            android:gravity="start|top"
            android:hint="Enter Description"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="PRICE"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/add_price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_border_green"
            android:hint="Enter Price"
            android:textColor="@color/Gray"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="CATEGORY"
            android:textSize="12sp" />
        <Spinner
            android:id="@+id/add_product_category_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textColor="#636060"
            android:background="@drawable/spinner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="QUANTITY"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/add_quantity_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_border_green"
            android:hint="Enter Quantity"
            android:textColor="@color/Gray"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/add_product_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="#4CAF50"
            android:text="Add Product"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>